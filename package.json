{
  "name": "request",
  "version": "1.0.1",
  "description": "Very simple, very lightweight, very light-on-features API that allows you to make Ajax requests.  Uses Promises, is cancelable, has zero dependencies.",
  "main": "dist/request.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "prebuild": "rm -rf ./dist",
    "build": "webpack --progress --colors",
    "watch": "npm run build -- --watch",
    "test": "babel-node ./node_modules/istanbul/lib/cli cover tape -- --require babel-register test/**/*.spec.js",
    "preprod": "rm -rf ./dist",
    "predocs": "rm -rf ./docs",
    "docs": "jsdoc -r src -d docs -t node_modules/minami",
    "prod": "npm test && npm run docs && webpack --config webpack.prod.config.js -p"
  },
  "keywords": [
    "Promisified XMLHttpRequest",
    "Zero Dependencies XMLHttpRequest",
    "Cancelable, Promisified XMLHttpRequest"
  ],
  "author": "Mark Vilrokx <mvilrokx@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.23.0",
    "blue-tape": "^1.0.0",
    "browser-sync": "^2.18.8",
    "coveralls": "^2.13.1",
    "eslint": "^3.16.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-import": "^2.2.0",
    "faucet": "0.0.1",
    "html-webpack-plugin": "^2.28.0",
    "istanbul": "^1.1.0-alpha.1",
    "jsdoc": "^3.4.3",
    "jsdom": "^10.1.0",
    "minami": "^1.2.3",
    "sinon": "^1.17.7",
    "tape": "^4.6.3",
    "webpack": "^2.2.1"
  },
  "dependencies": {}
}
